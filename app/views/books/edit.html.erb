<p id="notice"></p>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@book.errors.count, "error") %>件のエラーが発生いたしました！！</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="titlename">タイトル</label>
          <%= f.text_field :title, autofocus: true, id:"book_title", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="bodyname">感想</label>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "更新", class: "btn btn-success" %>
        </div>
        <%= link_to "詳細ページ", book_path(@book.id) %>
        <tr>|</tr>
        <%= link_to "1つ前に戻る", :back %>
      <% end %>
    </div>
  </div>
</div>
