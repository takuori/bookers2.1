<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@book.errors.count, "error") %>件のエラーが発生しました！！</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'form', book: Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <div class="sort-container">
        <%= link_to '新着', books_path(new: 'true'), {class: 'sort-link' "#{'active' if current_page?('/books/search?new=true')}"} %>
        <%= link_to '評価順', books_path(rate: 'true'), {class: 'sort-link' "#{'active' if current_page?('/books/search?rate=true')}"} %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>感想</th>
            <th>いいね数</th>
            <th>評価</th>
            <th>点数</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <td class=<%= "favorite-btn" + book.id.to_s %> >
              <%= render 'favorites/favorites', book: book %>
            </td>
            <td>
              <div id="star-rate<%= book.id %>"> </td>
              <script>
                $('#star-rate<%= book.id %>').empty();
                $('#star-rate<%= book.id %>').raty({
                  size     : 36,
                  starOff: '<%= asset_path('star-off.png') %>',
                  starOn:  '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= book.rate %>,
                });
              </script>
              </div>
            <td><%= book.rate %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

